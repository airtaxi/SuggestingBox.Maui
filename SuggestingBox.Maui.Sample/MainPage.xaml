<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:suggestingBox="clr-namespace:SuggestingBox.Maui;assembly=SuggestingBox.Maui"
             x:Class="SuggestingBox.Maui.Sample.MainPage"
             Title="SuggestingBox Sample">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="SuggestingBox Demo"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Type @ for email suggestions or # for hashtag suggestions"
                   FontSize="14"
                   TextColor="Gray" />

            <suggestingBox:SuggestingBox
                x:Name="SuggestingBoxControl"
                Prefixes="@#"
                Placeholder="Start typing with @ or #..."
                MaxSuggestionHeight="200">
                <suggestingBox:SuggestingBox.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="8,4">
                            <Label Text="{Binding .}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </suggestingBox:SuggestingBox.ItemTemplate>
            </suggestingBox:SuggestingBox>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,8" />

            <Label Text="Current Tokens"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Button x:Name="RefreshTokensButton"
                    Text="Refresh Tokens"
                    Clicked="OnRefreshTokensClicked" />

            <CollectionView x:Name="TokenListView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightGray"
                                StrokeShape="RoundRectangle 4"
                                Padding="8,4"
                                Margin="0,2">
                            <Label Text="{Binding .}" FontSize="13" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No tokens" TextColor="Gray" FontSize="13" />
                </CollectionView.EmptyView>
            </CollectionView>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,8" />

            <Label Text="Save / Restore"
                   FontSize="18"
                   FontAttributes="Bold" />

            <HorizontalStackLayout Spacing="8">
                <Button x:Name="SaveButton"
                        Text="Save"
                        Clicked="OnSaveClicked" />
                <Button x:Name="RestoreButton"
                        Text="Restore"
                        IsEnabled="False"
                        Clicked="OnRestoreClicked" />
            </HorizontalStackLayout>

            <Label x:Name="SaveStatusLabel"
                   Text="No saved state"
                   TextColor="Gray"
                   FontSize="13" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
